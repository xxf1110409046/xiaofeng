<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@drawable/menu_family_member_items"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="5.0dip" >

    <ImageView
        android:id="@+id/user_head_image"
        android:layout_width="65.0dip"
        android:layout_height="65.0dip"
        android:background="@drawable/bl_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:text="@string/relative"
            android:textColor="#ff5c5c5c"
            android:textSize="17.0sp" />

        <TextView
            android:id="@+id/item_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:text="132141241"
            android:textColor="#ff9fa0a0"
            android:textSize="13.0sp" />

    </LinearLayout>
     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        >
         <ImageView
            android:id="@+id/phone_number"
        	android:layout_width="25dp"
        	android:layout_height="25dp"
        	android:background="@drawable/bl_phone_number_1"
        	android:layout_marginLeft="120dp"
        	android:visibility="gone"/>      
    </LinearLayout>


    <TextView
        android:id="@+id/tv_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_icon_agree"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#ffffffff"
        android:visibility="gone"
        android:textSize="10.0sp" />
   

</LinearLayout>