<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#22d3f3"
    android:paddingTop="15dp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_equipment"
        android:layout_gravity="center"
        android:textColor="#FFFAFA"
        android:id="@+id/main_tital"/>
    <View 
        android:layout_width="240dp"
        android:layout_height="0.5dp"
        android:background="#FFFAFA"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"
    	android:layout_gravity="center"/>
    
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_add_equipment"
        android:layout_gravity="center"
        android:textColor="#FFFAFA"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:maxEms="11"
        android:id="@+id/main_content"/>
     
     <View 
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#FFFAFA"
        android:layout_marginTop="20dp"/>
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"   
         >
             <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:id="@+id/add_device_no"
             android:text="@string/cancel"
             android:textColor="#FFFAFA"
             android:background="@drawable/recover_fatory_btn"      
             />			
            <View
           	android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="#FFFAFA"
            android:layout_gravity="center_vertical"
             />   
             <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:id="@+id/add_device_ok"
             android:text="@string/comfir"
             android:textColor="#FFFAFA"
             android:background="@drawable/recover_fatory_btn"
             android:gravity="center"          
             />			
         
            
     </LinearLayout>
     

</LinearLayout>
