<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="30.0dip"
    android:paddingRight="30.0dip" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="45.0dip"
        android:background="@drawable/shape_diaolg_bg"
        android:gravity="center" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3.0dip"
            android:text="@string/no_disturb"
            android:textColor="#ffffffff"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bottom"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="140.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="4.0dip" >

            <com.brilyong.technology.view.WheelView
                android:id="@+id/starttime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="5.0dip"
                android:text="ä¸€"
                android:textColor="#ffe87518"
                android:textStyle="bold" />

            <com.brilyong.technology.view.WheelView
                android:id="@+id/entime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cl_time_xiu"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/shape_time_dialog_left_btn"
                android:text="@string/cancel"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/ok_time_xiu"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/shape_time_dialog_right_btn"
                android:text="@string/comfir"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>