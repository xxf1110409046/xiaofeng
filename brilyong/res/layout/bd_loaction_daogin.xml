<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bl_main_pop_dialog"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/loaction_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:padding="3dp"
            android:src="@drawable/bl_lbs_location" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="35dp"
            android:background="@drawable/bl_pop_line" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/loaction_time"
                android:layout_width="170.0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2014-07-29 11:30:21"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/position_info"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2.0dip"
                android:gravity="center"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/loaction_mode"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="35dp"
            android:background="@drawable/bl_pop_line" />

        <ImageView
            android:id="@+id/electricity_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/bl_electricity5" />
    </LinearLayout>

</LinearLayout>